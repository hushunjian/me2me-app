				FROM
					billboard_relation
				WHERE
					source_id = 3
				ORDER BY
					sort ASC
				LIMIT 3
			)
	) AS v
LEFT JOIN billboard_details d ON v.source_id = d.bid
WHERE
	d.type = 1) vv GROUP BY vv.sourceId

