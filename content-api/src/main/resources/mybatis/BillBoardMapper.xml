  <select id="loadBillBoardCover" resultType="long">

    select vv.sourceId as sourceId from (SELECT
	v.id as id,
	v.source_id as sourceId,
	v.target_id as targetId,
	v.type as type,
	v.sort as sort

FROM
	(
		(
			SELECT
				*
			FROM
				billboard_relation
			WHERE
				source_id = 1
			ORDER BY
				sort ASC
			LIMIT 10
		)
		UNION ALL
			(
				SELECT
					*
				FROM
					billboard_relation
				WHERE
					source_id = 2
				ORDER BY
					sort ASC
				LIMIT 10
